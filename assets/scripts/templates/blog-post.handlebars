{{#each blogs as |blog|}}
  {{log blog}}
  <section data-id="{{blog.id}}">
    <h2>{{blog.title}}</h2>
    <h6>Date:{{blog.date}}</h4>
    <h6>Blog ID:{{blog._id}}</h6>
    <p>
      {{#if blog.post}}
        {{blog.post}}
      {{else}}
        No content.
      {{/if}}
    </p>
    <h4>Reviews</h4>
    {{#each blog.reviews as |review|}}
      <h6>Review Title:{{review.title}}</h6>
      <h6>Review Content:{{review.content}}</h6>
        <hr>
    {{/each}}
    <form class="review-post" data-id="{{blog._id}}">
      <p class="message10"></p>
      <input type="text" name="review[title]" placeholder= "Ttile of Review" required ><br>
      <input type="text" name="review[content]" placeholder= "Review" required ><br>
      <button type="submit">Post Review</button>
    </form>
    <hr>
  </section>

{{/each}}
